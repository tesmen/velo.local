           id="order_device_ids_$$name$$" name="order[device_ids][$$name$$]" class="device_id"/>
{% endmacro %}

{% macro my_text_widget(form, class, isVisible, isRequired) %}
    <tr {% if not class == "" %}class="{{ class }}"{% endif %}{% if not isVisible %} style="display: none;" {% endif %}>
        <td>
            <div class="field_item">
                <div class="textfield">
                    <div>
                        {{ form_widget(form) }}
                        <div class="smileyes hide"></div>
                        <div class="smileno {% if form_errors(form) == '' %}hide{% endif %}">
                            <div class="note">
                                <span></span>

                                <div>
                                    <i></i>
                                    <b>{% if form_errors(form) %}<label
                                            class="invalid" for="{{ form.vars.id }}"
                                            generated="true">{{ form_errors(form) }}</label>{% endif %}
                                    </b>
                                </div>
                            </div>
                        </div>
                        {% if isRequired %}
                            <div class="required"></div>{% endif %}
                    </div>
                </div>
                <div class="error"></div>
            </div>
        </td>
        <td width="20">
            <div class="notesign">
                <div class="note">
                    <span></span>

                    <div>{{ form.vars.help }}</div>
                </div>
            </div>
        </td>
    </tr>
{% endmacro %}

