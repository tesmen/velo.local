{% macro bootstrapInput(form) %}
    <div class="form-group">
        {{ form_label(form) }}
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
        {#<span class="glyphicon glyphicon-remove form-control-feedback"></span>#}
    </div>
{% endmacro %}

{% macro prototype() %}
    <input autocomplete="off" placeholder="Введите MSISDN" type="text"
           id="contract_msisdns_$$name$$" name="contract[msisdns][$$name$$]" class="msisdn"/>
{% endmacro %}

{% macro new_contract_prototype() %}
