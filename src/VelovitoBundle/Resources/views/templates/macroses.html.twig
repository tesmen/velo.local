{% macro bootstrapFormInput(form) %}
    <div class="form-group">
        {{ form_label(form) }}
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form) }}
        {#<span class="glyphicon glyphicon-remove form-control-feedback"></span>#}
    </div>
{% endmacro %}

{% macro bootstrapFormSubmit(form) %}
    <div style="margin: 10px;">
    {{ form_widget(form, {'attr':{'class' : 'btn-primary form-control' }}) }}
    </div>
{% endmacro %}

{% macro bootstrapFormInputNoLabel(form) %}
    <div class="form-group">
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form) }}
        {#<span class="glyphicon glyphicon-remove form-control-feedback"></span>#}
    </div>
{% endmacro %}

{% macro advert(advert, showMenu = false) %}
    {% set originalsDir = app.request.getSchemeAndHttpHost() ~ '/img/originals/' %}

    <div class="advert">
        <div class="photo">
            {% set c = 0 %}
            {% for photo in advert.getPhotos() %}
                {% if c == 0 %}
                    <img src="{{ originalsDir ~ photo.getFileName() }}" alt="Image" height="100" width="100">
                {% endif %}

                {% set c = 1 %}
            {% endfor %}
        </div>

        <div class="info">
            <div class="title">
                <a href="{{ url('ad_view', {'advertId': advert.getId()}) }}">{{ advert.getTitle() }}</a>
                {{ advert.getPrice() }} {{ advert.getCurrency().getShortName() }}
            </div>

            <div class="description">
                {% if  (advert.getDescription() | length) > 150 %}
                    {{ advert.getDescription() | slice(0, 150) ~ '...' }}
                {% else %}
                    {{ advert.getDescription() }}
                {% endif %}
            </div>

            <div class="price">

            </div>

            <div class="menu">
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                {{ advert.getStatus().getName() }} &nbsp;

                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                {{ advert.getUser().getUserName() }} &nbsp;

                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                {{ advert.getViewsCount() |number_format }} &nbsp;

                <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                {{ advert.getCreationDate() | days_ago }}

                {% if app.user and showMenu %}|
                    <a href="{{ url('ad_edit', {'advertId': advert.getId()}) }}">Редактировать</a>|
                    <a href="{{ url('ad_unpublish', {'advertId': advert.getId()}) }}">Снять с публикации</a>|
                    {#<a href="{{ url('ad_delete', {'advertId': advert.getId()}) }}">Удалить</a>#}
                {% endif %}
            </div>
        </div>
    </div>
{% endmacro %}


