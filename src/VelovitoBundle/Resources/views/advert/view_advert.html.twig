{% extends 'VelovitoBundle::base.html.twig' %}
{% import '@Velovito/templates/macroses.html.twig' as macro %}

{% block body %}
    <div>
        <h1>{{ advert.getTitle() }}</h1>
        <a href="{{ url('view_category',{id: advert.ProductCategory.id}) }}">{{ advert.ProductCategory.Name }}</a> ->
        <a href="{{ url('adverts_search',{id: advert.Product.id }) }}">{{ advert.Product.Name }}</a>
    </div>

    <div>
        <div style="margin-bottom: 20px;">
            {% if advert.getPhoto is null %}
                <img src="{{ 0 | noPhoto(400,400) }}" class="gray-border" title="{{ advert.getTitle() }}">
            {% else %}
                <img src="{{ advert.getPhoto.getFileName() | getUserPhoto(400,400) }}" class="gray-border"
                     title="{{ advert.getTitle() }}">
            {% endif %}
        </div>
    </div>

    <div>
        <h3> {{ advert.getPrice() }} {{ advert.getCurrencyName() }}</h3>
    </div>

    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>{{ advert.getUser().getUserName() }}
    <br><br>
    <div class="row">
        <div class="col-md-6">
            <div><h4>Характеристики</h4> </div>
            <div class="col-md-6">
                {% for key, val in attributes %}
                    <div class="span2">{{ key }}</div>
                {% endfor %}
            </div>

            <div class="col-md-6">
                {% for key, val in attributes %}
                    <div class="span2">{{ val }}</div>
                {% endfor %}
            </div>
        </div>

        <div class="col-md-6">
            <div><h4>Описание</h4></div>
            {{ advert.getDescription() }}
        </div>
    </div>
{% endblock %}