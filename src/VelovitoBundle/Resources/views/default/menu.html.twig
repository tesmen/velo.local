<div class="sidebar-navigation">
    {% for cat_id, cat_content in menu %}
        <div class="category">
            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
            {{ cat_content.name }}

            {% if cat_content.products is not empty %}
                <div class="itemlist">
                    <div class="category-holder">
                        <a href="{{ url('view_category', {id: cat_id}) }}">Перейти в {{ cat_content.name }}</a>
                    </div>

                    {% for product_id, product_name in cat_content.products %}
                        <div class="category-item">
                            <a href="{{ url('adverts_search', {id: product_id}) }}">
                                {{ product_name }}
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>