<ul class="services col-md-12">
    <li class="item">
        <a href="">Объявления</a>
    </li>

    <li class="item">
        <a href="">Город</a>
    </li>

    <li class="item">
        <a href="">Помощь</a>
    </li>

    <li class="item dropdown pull-right ">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Личный кабинет <span class="caret"></span>
        </a>

        <ul class="dropdown-menu">
            {% if app.user %}
                <li><a href="#">{{ app.user.getUserName() }} (это вы)</a></li>
            {% else %}
                <li><a href="{{ url('login') }}">Войти</a></li>
                <li><a href="{{ url('registration') }}">Регистрация</a></li>
                <li role="separator" class="divider"></li>
            {% endif %}

            <li><a href="{{ url('my_ads') }}">Мои объявления</a></li>
            <li><a href="{{ url('settings') }}">Мой профиль</a></li>
            <li><a href="{{ url('favorites') }}">Закладки</a></li>

            {% if app.user %}
                <li role="separator" class="divider"></li>
                <li><a href="{{ url('logout') }}">Выход</a></li>
            {% endif %}

        </ul>
    </li>
</ul>

<div class="spacer-25 col-xs-12"></div>

<div class="col-xs-3 dropdown hidden-xs">
    <button type="button" class="col-xs-12 btn btn-default btn-md catalog-menu-button" data-toggle="dropdown">
        <span class="glyphicon glyphicon-th-list"></span>
        <span class="">Catalog</span>
    </button>


    <div class="list-group dropdown-menu unbound-list-group catalog-menu">
        {% for category in categories %}
            <a href="#" class="list-group-item unclickable-dropdown-item" data-label-for="menu_{{ category.id }}">
                {{ category.name }}
            </a>

            {% if category.products is not empty %}
                <div class="list-group catalog-submenu unbound-list-group display-none" id="menu_{{ category.id }}">
                    {% for product in category.products %}
                        <a href="#" class="list-group-item">{{ product.name }}</a>
                    {% endfor %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>

<div class="col-lg-6">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for...">

        <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Поиск!</button>
                </span>
    </div>
</div>

<div class="col-lg-3">
    <button type="button" class="col-xs-12 btn btn-default btn-md">
        <span class="glyphicon glyphicon-plus"></span>
        <span class="">Добавить объявление</span>
    </button>
</div>

