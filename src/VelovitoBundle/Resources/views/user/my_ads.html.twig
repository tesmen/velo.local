{% extends 'VelovitoBundle::base.html.twig' %}
{% import '@Velovito/templates/macroses.html.twig' as macro %}
{% block body %}
    <div class="col-md-9">
        <div class="section-title" style="display: block;">
            Мои объявления
        </div>

        {% include '@Velovito/templates/alert.html.twig' %}

        {% if(userAds is empty) %}
            У вас пока нет объявлений
        {% else %}
            {% for ad in userAds %}
                {{ macro.advert(ad, true) }}
            {% endfor %}
        {% endif %}

        <a href="{{ url('advert_new') }}">(+) Новое объявление</a>
    </div>


{% endblock %}