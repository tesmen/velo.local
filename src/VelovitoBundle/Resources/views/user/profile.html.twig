{% extends 'VelovitoBundle::base.html.twig' %}
{% import '@Velovito/templates/macroses.html.twig' as macro %}
{% block body %}
    <div class="col-md-9">
        <div class="section-title" style="display: block;">
            Профиль
        </div>

        {{ macro.bootstrapFormInput(form.username) }}
        {{ macro.bootstrapFormInput(form.email) }}
        {{ macro.bootstrapFormInput(form.registered_date) }}
    </div>

    <div class="profile-navbar col-md-3">
        <a href="{{ url('profile') }}" class="profile-navbar-item">
            <span>Профиль</span>
        </a>

        <a href="{{ url('my_ads') }}" class="profile-navbar-item">
            <span>Мои объявления</span>
        </a>

        <a href="{{ url('favorites') }}" class="profile-navbar-item">
            <span>Избранное</span>
        </a>
    </div>




{% endblock %}